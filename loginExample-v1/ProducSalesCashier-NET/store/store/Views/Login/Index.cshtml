@model store.Models.UserMO

@{
    ViewBag.Title = "Index";
} 
 
@if (Helper.SessionHelper.ExistUserInSession())
{
    @section scripts{
        <script>
            console.log("holasss");
            window.location.href = '@Url.Action("Index", "Home")';
        </script>
    }
}
 
@using (Html.BeginForm())
{
   @Html.AntiForgeryToken()

   
<div id="login">

    <h1 class="page-header text-center">Auntentificación en el sistema</h1>
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading">Acceso al sistema</div>
                <div class="panel-body">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label>Email</label> 
                            @Html.EditorFor(model => model.EmailUser, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.EmailUser, "", new { @class = "text-danger" })
                        </div>
                      <div class="form-group">
                            <label>Contraseña</label>
                            @Html.EditorFor(model => model.PasswordUser, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PasswordUser, "", new { @class = "text-danger" })


                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">
                                Ingresar
                            </button>
                        </div> 
                </div>
            </div>
        </div>
    </div>
</div>

}

